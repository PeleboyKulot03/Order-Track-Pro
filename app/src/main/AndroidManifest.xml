<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ORDERTRACKPRO"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customViews.CompletePayment"
            android:exported="false" />
        <activity
            android:name=".ui.view.ShowReceiptActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customViews.AlertNotice"
            android:exported="false" />
        <activity
            android:name=".ui.customViews.DeleteCaution"
            android:exported="false" />
        <activity
            android:name=".ui.view.CartActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customViews.ShowAddItem"
            android:exported="false" />
        <activity
            android:name=".ui.view.HomePageActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>